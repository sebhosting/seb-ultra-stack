/* assets/css/style.scss */
---
---

@import "{{ site.theme }}";

/* SEB Ultra Stack - Bad to the Bone Dark Theme */
:root {
  --primary: #00ff88;
  --secondary: #ff6b6b;
  --accent: #ffd93d;
  --dark: #0a0a0a;
  --darker: #1a1a2e;
  --blue: #16213e;
  --text: #ffffff;
  --text-muted: #cccccc;
  --border: #333333;
  --shadow: rgba(0, 255, 136, 0.2);
}

/* Override default theme colors */
body {
  background: linear-gradient(135deg, var(--dark) 0%, var(--darker) 50%, var(--blue) 100%) !important;
  color: var(--text) !important;
  font-family: 'Arial', 'Helvetica Neue', sans-serif !important;
  line-height: 1.6;
}

/* Header styling */
header {
  background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 100%) !important;
  border-bottom: 3px solid var(--primary) !important;
  padding: 2rem 0 !important;
}

header h1 {
  color: var(--primary) !important;
  text-shadow: 0 0 20px rgba(0, 255, 136, 0.5) !important;
  font-weight: 900 !important;
  font-size: 2.5rem !important;
  text-align: center !important;
  margin-bottom: 0.5rem !important;
}

header p {
  color: var(--text-muted) !important;
  text-align: center !important;
  font-size: 1.2rem !important;
  text-transform: uppercase !important;
  letter-spacing: 2px !important;
}

/* Main content container */
.container {
  max-width: 1200px !important;
  margin: 0 auto !important;
  padding: 2rem !important;
  background: rgba(0, 0, 0, 0.3) !important;
  border-radius: 15px !important;
  margin-top: 2rem !important;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5) !important;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  color: var(--primary) !important;
  text-shadow: 0 0 10px rgba(0, 255, 136, 0.3) !important;
  font-weight: bold !important;
}

h2 {
  border-bottom: 2px solid var(--primary) !important;
  padding-bottom: 0.5rem !important;
  margin-top: 3rem !important;
}

h3 {
  color: var(--secondary) !important;
  text-shadow: 0 0 10px rgba(255, 107, 107, 0.3) !important;
}

p, li {
  color: var(--text-muted) !important;
  font-size: 1.1rem !important;
}

/* Links */
a {
  color: var(--primary) !important;
  text-decoration: none !important;
  border-bottom: 1px solid transparent !important;
  transition: all 0.3s ease !important;
}

a:hover {
  color: var(--accent) !important;
  border-bottom-color: var(--accent) !important;
  text-shadow: 0 0 8px rgba(255, 211, 61, 0.4) !important;
}

/* Code blocks */
pre, code {
  background: var(--dark) !important;
  border: 1px solid var(--primary) !important;
  border-radius: 8px !important;
  color: var(--primary) !important;
  font-family: 'Courier New', monospace !important;
}

pre {
  padding: 1.5rem !important;
  margin: 1.5rem 0 !important;
  overflow-x: auto !important;
  box-shadow: 0 5px 15px rgba(0, 255, 136, 0.1) !important;
}

code {
  padding: 0.2rem 0.4rem !important;
  font-size: 0.9rem !important;
}

/* Tables */
table {
  width: 100% !important;
  border-collapse: collapse !important;
  margin: 2rem 0 !important;
  background: rgba(0, 0, 0, 0.2) !important;
  border-radius: 10px !important;
  overflow: hidden !important;
}

th {
  background: linear-gradient(45deg, var(--primary), #4ecdc4) !important;
  color: var(--dark) !important;
  font-weight: bold !important;
  padding: 1rem !important;
  text-align: left !important;
}

td {
  padding: 1rem !important;
  border-bottom: 1px solid var(--border) !important;
  color: var(--text-muted) !important;
}

tr:hover {
  background: rgba(0, 255, 136, 0.05) !important;
}

/* Blockquotes */
blockquote {
  background: linear-gradient(45deg, rgba(0, 255, 136, 0.1), rgba(78, 205, 196, 0.1)) !important;
  border-left: 4px solid var(--primary) !important;
  padding: 1.5rem !important;
  margin: 2rem 0 !important;
  border-radius: 5px !important;
  position: relative !important;
}

blockquote::before {
  content: 'âš¡' !important;
  position: absolute !important;
  top: 1rem !important;
  left: -15px !important;
  background: var(--primary) !important;
  color: var(--dark) !important;
  width: 30px !important;
  height: 30px !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 1.2rem !important;
}

blockquote p {
  color: var(--text) !important;
  font-weight: bold !important;
  margin: 0 !important;
}

/* Lists */
ul, ol {
  padding-left: 2rem !important;
}

li {
  margin: 0.5rem 0 !important;
  position: relative !important;
}

ul li::before {
  content: 'âš¡' !important;
  color: var(--primary) !important;
  position: absolute !important;
  left: -1.5rem !important;
}

/* Warning/Success boxes */
.warning, .success {
  padding: 1.5rem !important;
  margin: 2rem 0 !important;
  border-radius: 10px !important;
  border-left: 4px solid !important;
  position: relative !important;
}

/* Button styles for links that look like buttons */
a[href*="paypal"], a[href*="github"], a[href*="download"] {
  background: linear-gradient(45deg, var(--primary), #4ecdc4) !important;
  color: var(--dark) !important;
  padding: 12px 25px !important;
  border-radius: 25px !important;
  font-weight: bold !important;
  text-transform: uppercase !important;
  letter-spacing: 1px !important;
  display: inline-block !important;
  margin: 10px 10px 10px 0 !important;
  border: none !important;
  transition: all 0.3s ease !important;
  text-decoration: none !important;
  box-shadow: 0 5px 15px rgba(0, 255, 136, 0.3) !important;
}

a[href*="paypal"]:hover, a[href*="github"]:hover, a[href*="download"]:hover {
  transform: translateY(-3px) !important;
  box-shadow: 0 8px 25px rgba(0, 255, 136, 0.4) !important;
  text-shadow: none !important;
}

a[href*="paypal"] {
  background: linear-gradient(45deg, #0070ba, #003087) !important;
  color: white !important;
}

/* Horizontal rules */
hr {
  border: none !important;
  height: 2px !important;
  background: linear-gradient(to right, transparent, var(--primary), transparent) !important;
  margin: 3rem 0 !important;
}

/* Emoji styling */
h1 img, h2 img, h3 img {
  display: inline !important;
  margin: 0 0.2rem !important;
  vertical-align: middle !important;
}

/* Navigation improvements */
nav {
  background: var(--darker) !important;
  padding: 1rem !important;
  border-radius: 10px !important;
  margin-bottom: 2rem !important;
}

/* Responsive design */
@media (max-width: 768px) {
  .container {
    padding: 1rem !important;
    margin-top: 1rem !important;
  }
  
  header h1 {
    font-size: 2rem !important;
  }
  
  pre {
    padding: 1rem !important;
    font-size: 0.85rem !important;
  }
  
  table {
    font-size: 0.9rem !important;
  }
  
  th, td {
    padding: 0.5rem !important;
  }
}

/* Scroll animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

section {
  animation: fadeInUp 0.6s ease-out !important;
}

/* Lightning effects */
@keyframes lightning {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

h1::after, h2::after {
  content: 'âš¡' !important;
  color: var(--accent) !important;
  animation: lightning 2s infinite !important;
  margin-left: 0.5rem !important;
}

/* Custom table of contents styling */
#markdown-toc {
  background: rgba(0, 0, 0, 0.5) !important;
  border: 1px solid var(--primary) !important;
  border-radius: 10px !important;
  padding: 2rem !important;
  margin: 2rem 0 !important;
}

#markdown-toc::before {
  content: 'ðŸ“– Table of Contents' !important;
  display: block !important;
  font-size: 1.3rem !important;
  font-weight: bold !important;
  color: var(--primary) !important;
  margin-bottom: 1rem !important;
  text-align: center !important;
}

#markdown-toc a {
  color: var(--text-muted) !important;
  border: none !important;
}

#markdown-toc a:hover {
  color: var(--primary) !important;
}

/* Footer */
footer {
  background: var(--dark) !important;
  color: var(--text-muted) !important;
  text-align: center !important;
  padding: 2rem !important;
  margin-top: 4rem !important;
  border-top: 2px solid var(--primary) !important;
}

/* Custom badges */
.badge {
  background: linear-gradient(45deg, var(--secondary), var(--accent)) !important;
  color: var(--dark) !important;
  padding: 0.3rem 0.8rem !important;
  border-radius: 15px !important;
  font-size: 0.8rem !important;
  font-weight: bold !important;
  text-transform: uppercase !important;
  display: inline-block !important;
  margin: 0.2rem !important;
}

/* Glowing effects for important elements */
.glow {
  box-shadow: 0 0 20px var(--shadow) !important;
  border: 1px solid var(--primary) !important;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 12px !important;
}

::-webkit-scrollbar-track {
  background: var(--dark) !important;
}

::-webkit-scrollbar-thumb {
  background: var(--primary) !important;
  border-radius: 6px !important;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent) !important;
}
